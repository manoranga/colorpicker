<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:cardBackgroundColor="@android:color/transparent">

        <com.example.colorpickerlibs.utils.ringcolorpicker.BrightnessColorPickerView
            android:id="@+id/brightnessColorPicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mainViewCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_2">

            </ImageView>

            <com.example.colorpickerlibs.utils.ringcolorpicker.ColorPickRing
                android:id="@+id/ringView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

            </com.example.colorpickerlibs.utils.ringcolorpicker.ColorPickRing>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</FrameLayout>
